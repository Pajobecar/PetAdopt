{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset("profilecss/profile.css") }}">
<link rel="stylesheet" href="{{ asset("arnaldocss/css.css") }}">

<script src="https://kit.fontawesome.com/c8cde29953.js" crossorigin="anonymous"></script>

{% endblock %}

{% block body %}

    <h1 class="profiletexttitle profiletext2 text-center mx-auto animate__animated animate__fadeInLeft">My Profile</h1>
    


    <div class='container-fluid animate__animated animate__zoomIn'>
      <div class="row">
          <div class='col-lg-12'>
              <div class='container container-fluid row row-cols-md-1 row-cols-lg-1 mediacards mx-auto text-center  display-flex justify-content-center'>
                  
                  <div class="container">
                      <br><br>
                      <div class="main-body ">
                          
                            <div class="row gutters-sm display-flex justify-content-center">
                              <div class="col-lg-4 ">
                                <div class="card-body rounded ">
                                  <div>
                                    <div class="d-flex flex-column align-items-center justify-content-center" style="height: 46.8vh;">
                                      
                                      <img src="{{asset('uploads/'~ app.user.image)}}" class="rounded" style="width: 90%; height:90% ">
          
                                      
                                      
                                    </div>
                                    
                                  </div>
                                </div>
                              </div>
                              
                              <div class="col-md-8">
                                <div class="card mb-3 card-body">
                                  <div class="card-body ">
                                    <div class="row text-start">
                                      <br>
                                      <h1 class="profiletext">Name: <span class="profiletext2">{{ app.user.fname  }} {{ app.user.lname  }} <i class="fa-solid fa-user"></i></span> <i class="fa-solid fa-paw zoom"></i></h1>
                                      <hr>
                                      <h1></h1>
                                      <h1 class="profiletext">E-Mail: <span class="profiletext2">{{ app.user.email  }} <i class="fas fa-envelope"></i></span> <i class="fa-solid fa-paw zoom"></i> </h1>
                                      <hr>
                                      <h1></h1>
                                      <h1 class="profiletext">Gender:
                                      {% if app.user.gender == "male" %}
                                          <span class="male">Male <i class="fas fa-mars"></i></span> <i class="fa-solid fa-paw zoom"></i>
                                      {% else %}
                                          <span class="female">Female <i class="fas fa-venus"></i></span> <i class="fa-solid fa-paw zoom"></i>
                                      {% endif %}
                                      </span> </h1>
                                      <hr>
                                      <h1></h1>
                                      <h1 class="profiletext">Location: <span class="profiletext2">{{ app.user.city  }} <i class="fas fa-map-marker-alt"></i></span> <i class="fa-solid fa-paw zoom"></i></h1>
                                      <hr>
                                      <h1></h1>
                                      <h1 class="profiletext">Birth Date: <span class="profiletext2">{{ app.user.bdate|date("F jS/Y")   }} <i class="fas fa-birthday-cake"></i></span> <i class="fa-solid fa-paw zoom"></i></h1>
                                      <hr>
                                    </div>
                                  </div>
                                </div>
              
                                <div class="col-sm-12 mb-5">
                                  <div class="card h-100 card-body">
                                      <div class="card-body">
                                        <i class="fa-solid fa-paw zoom fs-1"></i>
                                        <button class="noselect2 mt-2" ><a class="nolink2" href="/profile/delete/{{app.user.id}}">Delete</a></button>
                                        <button class="noselect mt-2" ><a class="nolink" href="/profile/edit/{{app.user.id}}">Edit</a></button>
                                        <i class="fa-solid fa-paw zoom fs-1"></i>
                                      </div>
                                  </div>
                                </div>
                                
                              </div>
                  
                              
                              </div>
                              
                            </div>
                            
                          </div>
                          
                      </div>
                      
                  </div>
              </div>
          </div>
      </div>  
  </div>

  <h1 class="profiletexttitle profiletext2 text-center mx-auto animate__animated animate__fadeInLeft">My Pets</h1>
    <br><br>

    
    <div class="container">
        <div class="row">
    {% for pet in pets %}

          
            <div class="col-lg-4 col-xlg-3 col-md-6 col-sm-12 mb-4">
                <div class="card animate__animated animate__zoomIn">
                    <div class="card-body ">
                        <center class="m-t-30"> <img src="{{asset("uploads/" ~ pet.image)}}" class="img-circle" width="150" height="100">
                            <h4 class="card-title m-t-10">{{ pet.name }}</h4>
                            <h6 class="card-subtitle">{{ pet.species }}</h6><br>
                            <p class="card-text">{{ pet.description }}</p>
                            <div class="row text-center justify-content-md-center">
                                <div class="col-4"><i class="fa fa-cake-candles"></i>
                                    <font class="font-medium">{{ pet.age }}</font>
                                    </a>
                                </div>
                                <div class="col-4"><i class="fa fa-paw"></i>
                                    <font class="font-medium">{{ pet.status }}</font>
                                    </a>
                                </div>
                            </div>
                        </center>
                    </div>
                    <div>
                        <hr> </div>
                    <div class="card-body"> <small class="text-muted">Adoption Requirements </small>
                        <h6>{{ pet.needs }}</h6> <small class="text-muted p-t-30 db">Breed</small>
                        <h6>{{ pet.breed }}</h6> <small class="text-muted p-t-30 db">Address</small>
                        <h6>
                            <td>{{ pet.location }}</td>
                        </h6>
                        <div class="map-box">
                            {# <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d470029.1604841957!2d72.29955005258641!3d23.019996818380896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e848aba5bd449%3A0x4fcedd11614f6516!2sAhmedabad%2C+Gujarat!5e0!3m2!1sen!2sin!4v1493204785508"
                                width="100%" height="150" frameborder="0" style="border:0" allowfullscreen=""></iframe> #}
                        </div> <small class="text-muted p-t-30 db">Options</small>
                        <br>
                        <button class="noselect mt-2" ><a class="nolink" href="{{ path('app_pet_show', {'id': pet.id}) }}">Details</a></button>
                        {% if pet.likedBy.contains(app.user) %}
                         <button class="likeselect mt-2 " ><a class="nolink" href="{{ path('app_unlike', {'id': pet.id}) }}">Unlike<i class="fa-solid fa-thumbs-down"></i><span class="ps-1 pe-1 rounded bg-dark text-white text-end">{{pet.likedby.count}}</span></a></button>
                        {% else %}
                            
                         <button class="likeselect mt-2" ><a class="nolink text-center" href="{{ path('app_like', {'id': pet.id}) }}">Like<i class="fa-solid fa-thumbs-up "></i><span class="ps-1 pe-1 rounded bg-primary text-center bg-dark text-white">{{pet.likedby.count}}</span></a></button>
                        {% endif %}
                        
                       
                    </div>
                </div>
            
    </div>

 {% endfor %}

</div>
</div>
      

    
{% endblock %}
