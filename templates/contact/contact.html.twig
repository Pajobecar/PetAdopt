<div id="contact" class="paddsection mb-5">
    <div class="container">
        <h2 class="my-5 text-center animate__animated animate__fadeInDown 1s" id="abouttexttitle">Contact</h2>
        <div class="contact-block1">
            <div class="row">

                <div class="col-lg-6 mt-4">
                    <div class="contact-contact m-0">

                        

                        <ul class="contact-details" style="list-style-type: none;">
                            <li><span><p class="my-3 abouttext animate__animated animate__fadeInLeft 1s"><i class="fa-sharp fa-solid fa-envelope"></i> petshop123@gmail.com</p></li>
                            <li><span><p class="my-3 abouttext animate__animated animate__fadeInLeft 1s"><i class="fa-sharp fa-solid fa-phone"></i> +43 676 443 7359</p></li>
                            <li><span><p class="my-3 abouttext animate__animated animate__fadeInLeft 1s"><i class="fa-solid fa-location-pin"></i> Vienna, Austria</p></li>
                            <li><iframe id="maps" class="animate__animated animate__fadeInLeft 1s" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d170128.87924957124!2d16.21525321304428!3d48.22079589407208!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x476d079e5136ca9f%3A0xfdc2e58a51a25b46!2sVienna!5e0!3m2!1sen!2sat!4v1681894058934!5m2!1sen!2sat" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></li>
                        </ul>

                    </div>
                </div>

                <div class="col-lg-6 mt-5">
                    <form role="form" class="php-email-form animate__animated animate__zoomIn" id="form" method="POST">
                        <div class="row gy-3">

                            <div class="col-lg-6">
                                <div class="form-group contact-block1 mb-2">
                                    <input type="text" name="name" class="form-control bg-dark text-white" id="name" placeholder="Your Name" required>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group mb-2">
                                    <input type="email" class="form-control bg-dark text-white" name="email" id="email" placeholder="Your Email" required>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-group mb-5">
                                    <input type="text" class="form-control bg-dark text-white" name="subject" id="subject" placeholder="Subject" required>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-group mb-5">
                                    <textarea class="form-control bg-dark text-white" name="message" placeholder="Message" id="message" rows="11" required></textarea>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                {# <div class="loading">Loading</div>
                                <div class="sent-message">Your message has been sent. Thank you!</div> #}
                            </div>

                            <div class="mt-0">
                                <input type="submit" class="btn btn-success btn-send" value="Send message">
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



